{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "UIStyle": {
      "type": "object",
      "properties": {
        "display": {
          "type": "string",
          "enum": ["block", "inline", "none"]
        },
        "color": {
          "type": "string",
          "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        },
        "fontSize": {
          "type": "integer",
          "minimum": 1
        },
        "fontWeight": {
          "type": "string",
          "enum": ["normal", "bold", "lighter", "bolder", "100", "200", "300", "400", "500", "600", "700", "800", "900"]
        },
        "width": {
          "type": "integer",
          "minimum": 0
        },
        "height": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["display", "color", "fontSize", "fontWeight", "width", "height"],
      "additionalProperties": false
    }
  },
  "required": ["type", "UIStyle"],
  "additionalProperties": false
}
